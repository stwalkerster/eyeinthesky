<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <properties>
        <botNickname>EITSDebug</botNickname>
        <botGecos>EyeInTheSky - https://stwalkerster.co.uk/eits/</botGecos>
        <botUsername>eyeinthesky</botUsername>
    </properties>

    <components>
        <component type="EyeInTheSky.Model.AppConfiguration" 
                   service="EyeInTheSky.Model.Interfaces.IAppConfiguration">
            <parameters>
                <freenodeChannel>##stwalkerster-development</freenodeChannel>
                <wikimediaChannel>#en.wikipedia</wikimediaChannel>
                <commandPrefix>=</commandPrefix>
                <stalkConfigFile>EyeInTheSky.config</stalkConfigFile>
                <rcUser>rc-pmtpa!~rc-pmtpa@special.user</rcUser>
                <ircAlertFormat>[&#03;4&#02;{0}&#02;&#03;] Stalked edit {1} to page "&#03;3{2}&#03;" by [[User:{3}]], summary: &#03;7{4}</ircAlertFormat>
                <ircStalkTagSeparator>&#02;&#03;|&#03;4&#02;</ircStalkTagSeparator>
                <emailRcTemplate><![CDATA[Hi there!

A recent change to Wikipedia has been spotted which you have previously indicated interest in.

Title:        {2}
User:         {3}
Summary:      {4}
Flags:        {6}
Trigger time: {7}
Link:         {1}

----

This alert was triggered because the following stalks were triggered, and at least one of these has email notifications enabled:

{0}

----

Regards,

The Eye In The Sky
https://stwalkerster.co.uk/eits/
]]></emailRcTemplate>
                <emailStalkTemplate><![CDATA[Flag:                {0}
Description:         {1}
Configuration:       {2}
Email notifications: {3}
Expiry:              {4}

]]></emailStalkTemplate>
                <dateFormat>u</dateFormat>
                <emailSender>eyeinthesky@eyeinthesky.im</emailSender>
                <dateFormat>u</dateFormat>
                <emailConfiguration>${emailConfig}</emailConfiguration>
            </parameters>
        </component>
        
        <component id="emailConfig"
                   type="EyeInTheSky.Model.EmailConfiguration">
            <parameters>
                <hostname>localhost</hostname>
                <port>25</port>
                <username/>
                <password/>
                <sender>eyeinthesky@dorado.scimonshouse.net</sender>
                <to>stwalkerster@scimonshouse.net</to>
                <subject>[EITS Debug] Notification: {0}</subject>
            </parameters>
        </component>
        
        <component id="wikimediaIrcConfig"
                   service="Stwalkerster.IrcClient.Interfaces.IIrcConfiguration"
                   type="Stwalkerster.IrcClient.IrcConfiguration">
            <parameters>
                <authToServices>false</authToServices>
                <ssl>false</ssl>
                <hostname>irc.wikimedia.org</hostname>
                <port>6667</port>
                <nickname>#{botNickname}</nickname>
                <realName>#{botGecos}</realName>
                <username>#{botUsername}</username>
                <password/>
                <clientName>Wikimedia</clientName>
            </parameters>
        </component>

        <component id="freenodeIrcConfig"
                   service="Stwalkerster.IrcClient.Interfaces.IIrcConfiguration"
                   type="Stwalkerster.IrcClient.IrcConfiguration">
            <parameters>
                <authToServices>true</authToServices>
                <ssl>true</ssl>
                <hostname>chat.freenode.net</hostname>
                <port>7000</port>
                <nickname>#{botNickname}</nickname>
                <realName>#{botGecos}</realName>
                <username>#{botUsername}</username>
                <password>#{botPassword}</password>
                <clientName>Freenode</clientName>
            </parameters>
        </component>
    </components>
</configuration>